[user]
    name = Nate Hardison
    email = natehardison@gmail.com

[core]
    editor = /usr/bin/vim

[push]
    default = upstream

[alias]
    dc = diff --cached
    ds = diff --stat
    st = status
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    wip = commit -a -m"WIP"

[pager]
    color = true

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[github]
    user = natehardison

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff

[difftool]
    prompt = false

[sendemail]
    smtpserver = smtp.gmail.com
    smtpuser = $GMAIL_USER
    smtppass = $GMAIL_PASSWORD
    smtpencryption = tls
    smtpserverport = 587
    chainreplyto = false
